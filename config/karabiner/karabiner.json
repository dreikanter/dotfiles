        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "CapsLock â†’ Hyper (hold) / Escape (tap) using variable",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "set_variable": {
                                            "name": "hyper",
                                            "value": 1
