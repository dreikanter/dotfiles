[user]
  name = Alex Musayev
  email = alex.musayev@gmail.com

[apply]
  whitespace = nowarn

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  whitespace = red reverse
  meta = yellow bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore_global

[credential]
	helper = osxkeychain

[init]
  defaultBanch = master
  defaultBranch = main

[pager]
  difftool = false

[push]
  default = matching

[maintenance]
	repo = /Users/alex/zipline/zipline-app

#
# Diff and merge
#

# [diff]
#   tool = araxis
#   indentHeuristic = true
#   compactionHeuristic = true

[difftool]
  prompt = false

[difftool "bcomp"]
  cmd = /usr/local/bin/bcomp \"$LOCAL\" \"$REMOTE\"

[difftool "araxis"]
  path = /Applications/Araxis Merge.app/Contents/Utilities/compare
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[merge]
  summary = true
  tool = vscode
  conflictstyle = diff3

[mergetool "araxis"]
  path = /Applications/Araxis Merge.app/Contents/Utilities/compare
  prompt = false

[mergetool "bcomp"]
  cmd = /usr/local/bin/bcomp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
  trustExitCode = true

#
# Aliases
#

[alias]
  a = add
  b = branch
  c = commit
  cb = checkout -b
  cm = commit -m
  d = diff
  da = difftool --tool=araxis --dir-diff
  das = difftool --tool=araxis --dir-diff --staged
  dtt = difftool --tool=difftastic --dir-diff --staged
  dc = diff --cached
  dt = difftool
  f = fetch
  g = grep
  ign = ls-files -o -i --exclude-standard
  l = log
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  m = merge
  o = checkout
  p = pull
  pro = pull --rebase origin
  prom = pull --rebase origin main
  s = status
  w = whatchanged
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
