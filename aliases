#
# Core tools
#

alias cl=clear
alias ll='ls -al'
alias cll='clear; ls -al'
alias h='history'

#
# Git
#

alias gs=git status

#
# Ansible
#

alias play=ansible-playbook

#
# SSH connections
#

alias ssh-ci="ssh -i ~/.ssh/passiondig_ci jenkins@ci.passiondig.com"
alias ssh-st="ssh -i ~/.ssh/passiondig_staging deploy@dev.passiondig.com"
